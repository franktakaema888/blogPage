<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"
        ></script>
        <title>Author Settings Page</title>
    </head>
    <body>
    <div class="container">
        <h1 class="mb-4">Author Settings Page</h1>
        <!-- Edit form which will be pre-populated with existing entry -->
        <% articles.forEach(article => { %>
            <form action="/user/edit/<%= article.article_id %>" method="POST">
                <div class="form-group">
                    <label for="article_title">Article Title</label>
                    <input required value="<%= article.article_title %>" type="text" name="article_title" id="article_title" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <label for="article_sub_title">Article Sub-Title</label>
                    <input required value="<%= article.article_sub_title%>" type="text" name="article_sub_title" id="article_sub_title" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <label for="article_content">Text</label>
                    <textarea required name="article_content" id="article_content" class="form-control" ><%= article.article_content%></textarea>
                </div>
                <br>
                <div class="card-subtitle text-muted mb-2">
                    Date Created: <%= article.createdAt %>,
                    Date Published: <%= article.published %>,
                    Date Modified: <%= article.modified %>
                </div>
                <!-- submit button to post the for inputs to the database -->
                <a href="/user/author-home" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button> 
            </form>  
        <% }) %>
    </div>
    </body>
</html>
